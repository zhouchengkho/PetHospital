<div class="ourteam">
    <div class="container">
        <h6>Case</h6>
        <div class="col-xs-4">
            <div>
                <img src="./../img/p3.jpg" class="img-responsive" alt="">
            </div>
            <div class="margin-horizontal-16">
                <h4>{{disease_name}}</h4>
                <h4>{{name}}</h4>
            </div>
        </div>
        <div class="col-xs-8">
            <!-- Tip -->
            <div class="new-user-avatar-cta mb-4 py-2 px-3">
                <p class="mt-3">
                    <strong>已接诊</strong>
                </p>
            </div>
            <!-- Tabs -->
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab1" data-toggle="tab" aria-expanded="true">诊断结果</a></li>
                <li><a href="#tab2" data-toggle="tab">治疗手段</a></li>
            </ul>

            <div class="tab-content" id="tabs">
                <div class="tab-pane about active" id="tab1">
                    <div class="input-group">
                        <input id="treat_record" type="text" class="form-control" placeholder="新增记录">
                        <span id="treat_btn" class="input-group-btn"><button class="btn btn-default"
                                                                             type="button">提交</button></span>
                    </div><!-- /input-group -->

                    <ul class="list-group" id="treat_list">
                        {{#each treatment}}
                            <li class="list-group-item">{{this.date}}{{this.content}}</li>
                        {{/each}}
                    </ul>
                </div>
                <div class="tab-pane about" id="tab2">
                    <div class="input-group">
                        <input id="result_record" type="text" class="form-control" placeholder="新增记录">
                        <span class="input-group-btn">
                        <button class="btn btn-default" type="button">提交</button>
                    </span>
                    </div><!-- /input-group -->
                    <div class="panel panel-info" style="margin-top: 10px;">
                        <div class="panel-body">
                            {{result}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <p id="case_id">{{_id}}</p>
    </div>
</div>

<script>

    $("#treat_btn").click(() => {
        let treat_list = [];
        let id = $("#case_id").text();
        $("ul#treat_list li").each(function () {
            treat_list.push($(this).text());
            console.log($(this).text());
        });

        let data = {
            "id": id,
            "new_treatment": treat_list
        };
//        API.update_treatment(data, (err, result) => {
