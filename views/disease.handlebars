<div class="about" id="about">
    <div class="container">
        <div class="col-md-4 col-md-offset-4">
            <div class="thumbnail">
                <img alt="100%x200" style="max-height: 200px;display: block;"
                     data-holder-rendered="true" src="{{image}}">
                <div class="caption">
                    <h3>{{disease}}</h3>
                    <p style="word-wrap:break-word; word-break:break-all;">{{introduction}}</p>
                    <p><a href="https://en.wikipedia.org/wiki/Special:Search?search={{disease}}" target="_blank" class="btn btn-primary" role="button">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

